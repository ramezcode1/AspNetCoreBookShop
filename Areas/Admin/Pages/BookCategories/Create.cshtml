@page
@model BookStore.Areas.Admin.Pages.BookCategories.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BookCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookCategory.Name" class="control-label"></label>
                <input asp-for="BookCategory.Name" class="form-control" />
                <span asp-validation-for="BookCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a class="btn btn-secondary me-1" asp-page="Index"><i class="bi bi-reply-all"></i> Cancel</a>
</div>
